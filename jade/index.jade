doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title
    //- Vendor stylesheet
    link(href='css/ionic.app.css', rel='stylesheet')
    //- App-specific stylesheet
    link(href='css/style.css', rel='stylesheet')
    //- Vendor scripts
    script(src='lib/ionic/js/ionic.bundle.js')
    script(src='cordova.js')
    //- App-specific scripts
    script(src='js/app.js')
    script(src='js/asset.js')
    script(src='js/bar.js')
    script(src='js/drop.js')
    script(src='js/game.js')
    script(src='js/main_controller.js')
  body(ng-app='chromagic', ng-controller='MainCtrl')
    ion-pane
      ion-content
        //- Add ng-show/-hide logic to divs
        #start(data-ng-show='')
          .row
            .col
              h1.title Chromagic
          .row
              //- center this button!
              button.button.icon-right.ion-wand.button-balanced(ng-click='start()') Work your magic!
        #game(data-ng-show='')
          .row
            .col
              canvas#canvas
        #levelup(data-ng-show='')
          .row
            .col
              h1.title Level # {{game.currentLevel}} Complete!
              //- insert trophy badge here
              h1#trophy.i.icon.ion-trophy
              //- img(href='')
              //- button.button.icon-right.ion-play.button-large.button-balanced(ng-click='nextLevel()') Continue &nbsp;
        #end(data-ng-show='')
          //- Enter "game over" splat & text here
          .row
            .col
              h1.title Game Over!
          .row
            .col
              h3 Level # {{game.currentLevel}}
            .col
              h3 # {{game.score}} points
          .row
            .col
              //- social buttons will go here
            .col
              button.button.icon-left.ion-checkmark.button-small.button-positive(ng-click='done()') &nbsp; Done
